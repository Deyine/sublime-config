# Java config
export JAVA_HOME=/opt/jdk1.8.0_91
pathmunge $JAVA_HOME/bin after

#Android Config
export ANDROID_HOME=/home/djiddou/Android/Sdk
pathmunge $ANDROID_HOME/tools after
pathmunge $ANDROID_HOME/platform-tools after
pathmunge $ANDROID_HOME/build-tools/24.0.1 after

#Launchers aliases

alias sublime=/home/djiddou/tools/ide/sublime_text_3/sublime_text
alias astudio=/home/djiddou/tools/ide/android-studio/bin/studio

# Git aliases
alias gamend="git commit --amend"
alias gst="git status"
alias gdf="git diff"
alias ga="git add"
alias gcm="git commit -m"
alias grm="git rm"
alias gp="git push"
alias gpr="git pull --rebase"
alias permission-reset='git diff -p | grep -E "^(diff|old mode|new mode)" | sed -e "s/^old/NEW/;s/^new/old/;s/^NEW/new/" | git apply'

